<h6 class="p-3 bg-info bg-opacity-10 border border-primary border-start-0 rounded-end">Data Mahasiswa</h6>
<a href="/mahasiswa/add" class="btn btn-primary mb-2 mt-2">Tambah Data Mahasiswa</a>

<% if (msg.length !== 0) { %>
    <div class="alert alert-success" role="alert">
        <%= msg %>
    </div>
<% } %>

<table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">NIM</th>
        <th scope="col">Nama</th>
        <th scope="col">Jurusan</th>
        <th scope="col">Aksi</th>
        </tr>
    </thead>
    <tbody>
        <% if (mahasiswa.length ===0) { %>
            <tr>
                <td colspan="5">
                    <div class="alert alert-danger fw-bold" role="alert"> Data mahasiswa masih kosong.</div>
                </td>
            </tr>
        <% } %>
        <% mahasiswa.forEach((mhs,i) => { i++ %>
            <tr>
                <th scope="row"><%= i %></th>
                <td><%= mhs.nim %></td>
                <td><%= mhs.nama %></td>
                <td><%= mhs.jurusan %></td>
                <td><a href="/mahasiswa/<%= mhs.nim %>" class="btn btn-primary inline-block">Details</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>


