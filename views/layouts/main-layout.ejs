<!doctype html>
<html lang="en" data-bs-theme="light">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  </head>
  <body>
    <div class="d-block d-md-none">
      <%- include('nav') %>
      <% const date = new Date().getHours() 
        const greetings = date <  12 ? 'Selamat Pagi' : date < 18 ? 'Selamat Sore' : 'Selamat Malam' %>
      <p class="text-end mt-3 me-3"><%= greetings %>, Selamat Datang!</p>
      <hr class="border border-primary border-2 opacity-75">
    </div>
    <div class="mt-2">
      <div class="container-fluid d-none d-md-block">
        <div class="row">
          <div class="col-md-2 ps-5 pe-5">
            <h4 class="mt-2 me-3"><a class="navbar-brand">Application</a></h4>
          
          </div>
          <div class="col-md ps-5 pe-5">
            <p class="text-end mt-3"><%= greetings %>, Selamat Datang!</p>
          </div>
          <hr class="border border-primary border-2 opacity-75">
        </div>
      </div>
      <div class="container-fluid ps-5 pe-5">
        <div class="row">
          <div class="col-md-2 d-none d-md-block">
            <h6>Menu</h6>
            <div class="nav flex-column nav-pills mt-3">
              <li class="nav-item bg-primary-subtle rounded">
                <% const link1 = page_name === 'dashboard' ? 'active' : 'text-dark' %>
                <a  class="nav-link <%= link1 %>" href="/">Dashboard</a>
              </li>
              <li class="nav-item mt-2 bg-primary-subtle rounded ">
                <% const link2 = page_name === 'students' ? 'active' : 'text-dark' %>
                <a class="nav-link <%= link2 %> " href="/mahasiswa">Data Mahasiswa</a>
              </li>
              <li class="nav-item mt-2 bg-primary-subtle rounded ">
                <% const link3 = page_name === 'lecturers' ? 'active' : 'text-dark' %>
                <a class="nav-link <%= link3 %>" href="/dosen">Data Dosen</a>
              </li>
            </div>
          </div>
          <div class="col-md">
            <div class="mt-4">
              <%- body %>
            </div>
          </div>
        </div>
      </div>
    </div>    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>